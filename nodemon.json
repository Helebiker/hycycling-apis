{
    "watch": ["./"],
    "ext": "js,json",
    "ignore": ["test/**/*.js", "logs"],
    "execMap": {
        "js": "node --trace-deprecation",
        "json": "node --inspect"
    },
    "delay": "1000",
    "legacyWatch": true,
    "verbose": true,
    "env": {
        "NODE_ENV": "test",
        "APP_NAME": "IA Cycling Backend",
        "PORT": 3000
    },
    "events": {
        "start": "echo 'Application has started'",
        "restart": "echo 'Application restarted'",
        "crash": "echo 'Application has crashed'"
    }
}